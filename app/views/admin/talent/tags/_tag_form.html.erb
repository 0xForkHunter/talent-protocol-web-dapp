<%= form_with model: [:admin, talent, tag], local: true do |form |%>
  <%= render "shared/form_errors", resource: tag%>

  <div class="form-group is-required">
    <%= form.label "Description" %>
    <%= form.text_area :description, required: true, class: "form-control" %>
  </div>

  <div class="form-group form-check">
    <%= form.check_box :primary, class: "form-check-input" %>
    <%= form.label :primary, class: "form-check-label" %>
  </div>

  <div class="form-actions">
    <%= link_to "Cancel", tag.persisted? && admin_talent_tags_path(talent, tag) || admin_talent_tags_path(tag), class: "btn btn-secondary talent-button", role: "button"%>
    <%= form.submit "Save Tab", class: "btn btn-primary talent-button" %>
  </div>
<% end %>
