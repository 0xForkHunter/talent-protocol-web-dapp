<main class="mx-auto d-flex px-4 flex-column justify-content-center align-items-center sign-in h-100">
  <%= react_component("Logo",
    props: { width: "100%", height: 50},
    prerender: false, html_options: { class: "my-3" })
  %>
  <div id="clearance" class="border p-3 p-md-5 w-25 registration-box bg-white">
    <h2><%= t(".title") %></h2>

    <p><%= t(".description") %></p>
    <%= form_for :password, url: passwords_path do |form| %>
      <div class="text-field">
        <%= form.label :email %>
        <%= form.text_field :email, type: 'email' %>
      </div>

      <div class="submit-field">
        <%= form.submit %>
      </div>
    <% end %>
  </div>
</main>
