<div class="col-12 col-lg-9 flex-grow-0 flex-shrink-0 lg-overflow-y-scroll d-flex px-0">
  <main class="col-12 px-4 d-flex flex-column justify-content-start">
    <h1>Users</h1>

    <div class="d-flex flex-row justify-content-between align-items-center mt-2">
      <%= form_tag(admin_users_path, method: :get) do %>
        <div class="form-group d-flex flex-row align-items-center">
          <%= text_field_tag(:search, nil, placeholder: "Search by email", class: "form-control mr-2") %>
          <%= submit_tag("Search", name: nil, class: "btn btn-primary talent-button") %>
        </div>
      <% end %>
    </div>

    <table class="table table-hover mt-4">
      <thead class="table-primary">
        <tr>
          <th scope="col">#</th>
          <th scope="col">Username</th>
          <th scope="col">Wallet ID</th>
          <th scope="col">Email</th>
          <th scope="col">Admin</th>
          <th scope="col">Talent</th>
          <th scope="col">Investor</th>
          <th scope="col"></th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user|%>
          <tr>
            <th scope="row"><%= user.id%></th>
            <td><%= user.username %></td>
            <td><%= user.display_wallet_id %></td>
            <td><%= user.email %></td>
            <td><%= user.admin? %></td>
            <td><%= user.talent.present? %></td>
            <td><%= user.investor.present? %></td>
            <td><%= link_to "Details", admin_user_path(user), class: "btn btn-info talent-button", role: "button" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <%== pagy_bootstrap_nav(@pagy) %>
  </main>
</div>
