<%= form_with model: [:admin, user], local: true do |form |%>
  <%= render "shared/form_errors", resource: user%>

  <div class="form-group is-required">
    <%= form.label :username %>
    <%= form.text_field :username, required: true, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :role %>
    <%= form.text_field :role, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :wallet_id %>
    <%= form.text_field :wallet_id, class: "form-control" %>
  </div>

  <div class="form-actions">
    <%= link_to "Cancel", user.persisted? && admin_users_path(user) || admin_users_path, class: "btn btn-secondary talent-button", role: "button"%>
    <%= form.submit "Save User", class: "btn btn-primary talent-button" %>
  </div>
<% end %>
