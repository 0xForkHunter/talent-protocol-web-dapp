<div class="col-12 col-lg-9 flex-grow-0 flex-shrink-0 lg-overflow-y-scroll d-flex px-0">
  <main class="col-12 px-2 d-flex flex-column justify-content-start">
    <h1>Manage Waitlist</h1>

    <div class="d-flex flex-row justify-content-between align-items-center mt-2">
      <%= form_tag(admin_wait_list_index_path, method: :get) do %>
        <div class="form-group d-flex flex-row align-items-center">
          <%= text_field_tag(:search, nil, placeholder: "Search by email", class: "form-control mr-2") %>
          <%= submit_tag("Search", name: nil, class: "btn btn-primary talent-button") %>
        </div>
      <% end %>
      <%= link_to "Add to the waitlist", new_admin_wait_list_path, class: "btn btn-primary talent-button" %>
    </div>

    <%= render "shared/flashes" %>

    <table class="table table-hover mt-4">
      <thead class="table-primary">
        <tr>
          <th scope="col">#</th>
          <th scope="col">Email</th>
          <th scope="col">Approved</th>
          <th scope="col">Talent</th>
          <th scope="col"></th>
        </tr>
      </thead>
      <tbody>
        <% @wait_list.each do |wait_list_item|%>
          <tr>
            <th scope="row"><%= wait_list_item.id%></th>
            <td><%= wait_list_item.email %></td>
            <td><%= wait_list_item.approved %></td>
            <td><%= wait_list_item.talent %></td>
            <td><%= link_to "Details", admin_wait_list_path(wait_list_item), class: "btn btn-primary talent-button", role: "button" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <%== pagy_bootstrap_nav(@pagy) %>
  </main>
</div>
