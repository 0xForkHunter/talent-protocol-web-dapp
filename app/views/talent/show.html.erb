<div class="d-flex flex-column align-items-center align-items-lg-stretch flex-lg-row h-100">
  <div class="col-12 col-lg-7 bg-white px-3 py-3 px-sm-5 px-lg-4 py-lg-5 border-right talent-content-body">
    <%= react_component("TalentShow", props:
      {
        talent: {
          username: @talent.username,
          description: @talent.description,
          ticker: @talent.coin.display_ticker,
          tags: ["Space", "Enterpreneur"],
          linkedinUrl: @talent.linkedin_url,
          profilePictureUrl: @talent.profile_picture_url,
        },
        careerGoals: [{ description: @talent.career_goal.description }],
        rewards: @talent.rewards.map { |reward| { required_amount: reward.required_amount.to_s(:delimited), description: reward.description } }
      }, prerender: false)
    %>
  </div>
  <div class="col-12 col-lg-5 d-flex flex-column tal-content-side px-3 py-3 px-sm-5 px-lg-4 py-lg-5">
    <div class="mt-5">
      <%= react_component("TalentCoin", props:
        {
          price: @talent.coin.display_price,
          marketCap: @talent.coin.display_market_cap,
          sponsors: @talent.investors.count,
          circulatingSupply: "5837",
          priceVariance7d: "-2.14",
          priceVariance30d: "29.39"
        }, prerender: false)
      %>
    </div>
    <div class="mt-lg-5 mt-3 mb-2">
      <%= react_component("TalentLeaderboard", props:
        {
          topTalents: @talent_leaderboard.map { |tal| { id: tal.id, name: tal.username, ticker: tal.coin.display_ticker, price: tal.coin.display_price } }
        }, prerender: false)
      %>
    </div>
  </div>
</div>
