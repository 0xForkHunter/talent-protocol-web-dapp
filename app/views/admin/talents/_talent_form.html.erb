<%= form_with model: [:admin, talent], local: true do |form |%>
  <%= render "shared/form_errors", resource: talent%>

  <div class="form-group is-required">
    <%= form.label :username %>
    <%= form.text_field :username, required: true, class: "form-control" %>
  </div>

  <div class="form-group is-required">
    <%= form.label :wallet_id %>
    <%= form.text_field :wallet_id, required: true, class: "form-control" %>
  </div>

  <div class="form-group is-required">
    <%= form.label :public_key %>
    <%= form.text_field :public_key, required: true, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :description %>
    <%= form.text_area :description, class: "form-control" %>
  </div>

  <div class="form-actions">
    <%= link_to "Cancel", talent.persisted? && admin_talent_path(talent) || admin_talents_path, class: "btn btn-secondary", role: "button"%>
    <%= form.submit "Save Talent", class: "btn btn-primary" %>
  </div>
<% end %>
