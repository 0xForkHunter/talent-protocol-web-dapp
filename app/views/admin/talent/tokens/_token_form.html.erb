<%= form_with model: [:admin, talent, token], local: true do |form |%>
  <%= render "shared/form_errors", resource: token%>

  <div class="form-group is-required">
    <%= form.label "Price in cents" %>
    <%= form.text_field :price, required: true, class: "form-control" %>
  </div>

  <div class="form-group is-required">
    <%= form.label :ticker %>
    <%= form.text_field :ticker, required: true, class: "form-control" %>
  </div>

  <div class="form-group is-required">
    <%= form.label :reserve_ratio %>
    <%= form.text_field :reserve_ratio, required: true, class: "form-control" %>
  </div>

  <div class="form-group is-required">
    <%= form.label :talent_fee %>
    <%= form.text_field :talent_fee, required: true, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :contract_id %>
    <%= form.text_field :contract_id, class: "form-control" %>
  </div>

  <div class="form-actions">
    <%= link_to "Cancel", token.persisted? && admin_user_path(token.talent.user) || admin_users_path, class: "btn btn-secondary talent-button", role: "button"%>
    <%= form.submit "Save Token", class: "btn btn-primary talent-button" %>
  </div>
<% end %>
