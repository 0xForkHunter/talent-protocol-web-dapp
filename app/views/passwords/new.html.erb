<main class="mx-auto d-flex px-4 flex-column justify-content-center align-items-center sign-in h-100">
  <%= react_component("Logo",
    props: { width: 50, height: 50, bigName: true },
    prerender: false, html_options: { class: "my-3" })
  %>
  <div id="clearance" class="border p-5 registration-box bg-white">
    <h2><%= t(".title") %></h2>

    <p><%= t(".description") %></p>
    <%= form_for :password, url: passwords_path do |form| %>
      <div class="form-group">
        <%= form.label :email %>
        <%= form.text_field :email, type: 'email', class: "form-control" %>
      </div>

      <div class="submit-field">
        <%= form.submit "Reset password", class: "btn btn-primary talent-button float-right mt-3" %>
      </div>
    <% end %>
  </div>
</main>
