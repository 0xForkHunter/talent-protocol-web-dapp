<!DOCTYPE html>
<html>
  <head>
    <title>Talent Protocol</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= javascript_pack_tag 'application' %>
    <%= stylesheet_pack_tag "application", media: 'all' %>
    <link rel="shortcut icon" href="/favicon.ico">
    <% unless Rails.env.development? || Rails.env.test? %>
      <script async src="https://www.googletagmanager.com/gtag/js?id=G-11PCKF12YC"></script>
      <%= javascript_tag nonce: true do -%>
        window.dataLayer = window.dataLayer || [];
        function gtag(){dataLayer.push(arguments);}
        gtag('js', new Date());

        gtag('config', 'G-11PCKF12YC');
      <% end -%>
    <% end %>
  </head>

  <body>
    <% if current_user.present? %>
      <div class="h-100 d-flex flex-column lg-overflow-y-hidden align-items-center">
        <div class="lg-overflow-y-hidden d-flex flex-row flex-wrap flex-lg-nowrap flex-lg-grow-1 flex-shrink-1 justify-content-center w-100">
          <%= render "shared/navbar" %>
          <%= yield %>
        </div>
      </div>
    <% else %>
      <%= yield %>
    <% end %>
  </body>
</html>
