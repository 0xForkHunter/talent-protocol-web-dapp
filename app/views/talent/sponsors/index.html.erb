<div class="lg-overflow-y-scroll px-0 d-flex flex-column flex-lg-row w-100 border-left lg-h-100">
  <main class="col-12 mx-auto mx-lg-0 px-0 d-flex flex-column px-3 py-3 px-sm-5">
    <%= react_component("TalentSponsorsTable",
      props: {
        talent: {
          id: @talent.id,
          username: @talent.username,
          ticker: @talent.token.ticker,
          tags: @talent.tags.map(&:description),
          profilePictureUrl: @talent.profile_picture_url,
          created_at: @talent.created_at,
          talentRewards: 0
        },
        contractId: @talent.token.contract_id,
      },
      prerender: false) %>
  </main>
</div>
