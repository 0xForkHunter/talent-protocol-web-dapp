<%= form_with model: [:admin, talent, reward], local: true do |form |%>
  <%= render "shared/form_errors", resource: reward%>

  <div class="form-group is-required">
    <%= form.label "Description" %>
    <%= form.text_area :description, required: true, class: "form-control" %>
  </div>

  <div class="form-group is-required">
    <%= form.label :required_amount %>
    <%= form.number_field :required_amount, required: true, class: "form-control" %>
  </div>

  <div class="form-actions">
    <%= link_to "Cancel", reward.persisted? && admin_talent_rewards_path(talent, reward) || admin_talent_rewards_path(talent), class: "btn btn-secondary", role: "button"%>
    <%= form.submit "Save Reward", class: "btn btn-primary" %>
  </div>
<% end %>
