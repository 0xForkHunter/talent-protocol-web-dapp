<div class="col-12 col-lg-9 flex-grow-0 flex-shrink-0 lg-overflow-scroll d-flex px-0">
  <main class="col-12 px-2 d-flex flex-column justify-content-start">
    <h1>Manage Waitlist</h1>

    <%= link_to "Add to the waitlist", new_admin_wait_list_path, class: "btn btn-primary talent-button mt-4" %>

    <%= render "shared/flashes" %>

    <table class="table table-hover mt-4">
      <thead class="table-primary">
        <tr>
          <th scope="col">#</th>
          <th scope="col">Email</th>
          <th scope="col">Approved</th>
          <th scope="col"></th>
        </tr>
      </thead>
      <tbody>
        <% @wait_list.each do |wait_list_item|%>
          <tr>
            <th scope="row"><%= wait_list_item.id%></th>
            <td><%= wait_list_item.email %></td>
            <td><%= wait_list_item.approved %></td>
            <td><%= link_to "Details", admin_wait_list_path(wait_list_item), class: "btn btn-primary talent-button", role: "button" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <%== pagy_bootstrap_nav(@pagy) %>
  </main>
</div>
